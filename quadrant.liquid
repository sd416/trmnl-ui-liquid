{% assign percent_size = 70 %}
{% assign label_size = 40 %}
{% assign bar_height = 40 %}
{% assign spacing = 12 %}

<div style="
  width:100%;
  height:100%;
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
  align-items:center;
  text-align:center;
  padding:6px;
  box-sizing:border-box;
">

  <!-- VERY SMALL PERCENTAGE FOR HALF HORIZONTAL -->
  <div style="
    font-size:{{ percent_size }}px;
    font-weight:700;
    line-height:1;
  ">
    {{ urineTankPercentage }}%
  </div>

  <!-- LABEL -->
  <div style="
    font-size:{{ label_size }}px;
    margin-top:{{ spacing }}px;
    opacity:0.7;
  ">
    ISS URINE TANK LEVEL
  </div>

  <!-- PROGRESS BAR -->
  <div style="
    width:96%;
    height:{{ bar_height }}px;
    margin-top:{{ spacing }}px;
    background:#ddd;
    border-radius:6px;
    overflow:hidden;
  ">
    <div style="
      height:100%;
      width:{{ urineTankPercentage }}%;
      background:#000;
    ">
    </div>
  </div>

</div>
