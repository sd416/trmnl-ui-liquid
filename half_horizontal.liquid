{% assign icon_size = 150 %}

<div class="screen">
  <div class="view view--half_horizontal">
    <div class="layout layout--row layout--center">

      <!-- LEFT : ISS ICON -->
      <div class="layout layout--center no-shrink w--[180px]">
        <svg
          width="{{ icon_size }}"
          height="{{ icon_size | times: 0.6 }}"
          viewBox="0 0 300 120"
          fill="black"
        >
          <!-- LEFT SOLAR ARRAYS -->
          <rect x="0" y="45" width="70" height="12"/>
          <rect x="0" y="65" width="70" height="12"/>

          <!-- RIGHT SOLAR ARRAYS -->
          <rect x="230" y="45" width="70" height="12"/>
          <rect x="230" y="65" width="70" height="12"/>

          <!-- CENTRAL TRUSS -->
          <rect x="90" y="56" width="120" height="8"/>

          <!-- MODULES -->
          <rect x="120" y="40" width="24" height="40" rx="4"/>
          <rect x="156" y="40" width="24" height="40" rx="4"/>

          <!-- NODE -->
          <circle cx="150" cy="60" r="10"/>
        </svg>
      </div>

      <!-- RIGHT : DATA -->
      <div class="layout layout--col layout--center text--left layout--stretch-x">

        <!-- CENTERED PERCENTAGE -->
        <div class="layout layout--center layout--stretch-y">
          <div class="value value--xlarge">
            {{ urineTankPercentage }}%
          </div>
        </div>

        <!-- LABEL -->
        <div class="label mt text--gray-30">
          ISS URINE TANK LEVEL
        </div>

        <!-- PROGRESS BAR -->
        <div class="progress-bar progress-bar--small mt w--full">
          <div class="track">
            <div class="fill" style="width:{{ urineTankPercentage }}%"></div>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
