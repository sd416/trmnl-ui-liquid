{% assign percent_size = 100 %}
{% assign label_size = 40 %}
{% assign bar_height = 30 %}
{% assign spacing = 6 %}
{% assign icon_size = 150 %}

<div style="
  width:100%;
  height:100%;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:space-between;
  padding:12px;
  box-sizing:border-box;
">

  <!-- LEFT : ISS ICON -->
  <div style="
    width:30%;
    display:flex;
    justify-content:center;
    align-items:center;
  ">
    <svg
      width="{{ icon_size }}"
      height="{{ icon_size | times: 0.6 }}"
      viewBox="0 0 300 120"
      fill="black"
    >
      <!-- LEFT SOLAR ARRAYS -->
      <rect x="0" y="45" width="70" height="12"/>
      <rect x="0" y="65" width="70" height="12"/>

      <!-- RIGHT SOLAR ARRAYS -->
      <rect x="230" y="45" width="70" height="12"/>
      <rect x="230" y="65" width="70" height="12"/>

      <!-- CENTRAL TRUSS -->
      <rect x="90" y="56" width="120" height="8"/>

      <!-- MODULES -->
      <rect x="120" y="40" width="24" height="40" rx="4"/>
      <rect x="156" y="40" width="24" height="40" rx="4"/>

      <!-- NODE -->
      <circle cx="150" cy="60" r="10"/>
    </svg>
  </div>

  <!-- RIGHT : DATA -->
  <div style="
    width:70%;
    display:flex;
    flex-direction:column;
    justify-content:center;
    text-align:left;
  ">

    <!-- CENTERED PERCENTAGE -->
    <div style="
      flex:1;
      display:flex;
      align-items:center;
      justify-content:center;
    ">
      <div style="
        font-size:{{ percent_size }}px;
        font-weight:700;
        line-height:1;
      ">
        {{ urineTankPercentage }}%
      </div>
    </div>

    <!-- LABEL -->
    <div style="
      font-size:{{ label_size }}px;
      margin-top:{{ spacing }}px;
      opacity:0.7;
    ">
      ISS URINE TANK LEVEL
    </div>

    <!-- PROGRESS BAR -->
    <div style="
      width:100%;
      height:{{ bar_height }}px;
      margin-top:{{ spacing }}px;
      background:#ddd;
      border-radius:6px;
      overflow:hidden;
    ">
      <div style="
        height:100%;
        width:{{ urineTankPercentage }}%;
        background:#000;
      "></div>
    </div>

  </div>

</div>
